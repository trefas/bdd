<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<fx:root type="VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <HBox alignment="CENTER" prefHeight="35.0" prefWidth="425.0" spacing="5.0">
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </padding>
      <DatePicker fx:id="dp_date" promptText="Дата кроводачи"/>
      <TextField fx:id="tf_mark" promptText="Маркировка" HBox.hgrow="ALWAYS"/>
   </HBox>
   <HBox spacing="5.0">
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </padding>
      <TextField fx:id="tf_reason" promptText="Пр.здоров(а)" HBox.hgrow="ALWAYS"/>
      <Button fx:id="btn" mnemonicParsing="false" text="Создать"/>
   </HBox>
</fx:root>
